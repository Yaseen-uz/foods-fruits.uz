---
import { Building } from "lucide-react";

// ContactSection.astro
const companyInfo = {
    contact: {
        address: "100115 Respublic of Uzbekistan, Tashkent city, Chilanzar district, KICHIK XALQA YO’LI 2A-UY",
        phone: "998, 909, 729, 9470",
        email: "foodsfruits@yandex.com",
    },
};
---

<section id="contact" class="py-24">
    <div class="max-w-6xl mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4 tracking-tight">Свяжитесь с нами</h2>
            <p class="text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto mb-12">Есть вопросы о наших продуктах? Свяжитесь с нами.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
            <!-- Contact Information -->
            <div class="bg-white/80 backdrop-blur-md border border-white/20 shadow-lg p-8 rounded-2xl">
                <h3 class="text-2xl font-medium mb-6">Контактная информация</h3>

                <div class="space-y-6 mb-8">
                    <div class="flex items-center space-x-4">
                        <Building className="w-6 h-6 text-yellow-500 mt-1 flex-shrink-0" />
                        <div>
                            <p class="font-medium">Компания</p>
                            <p class="!my-0 font-medium">OOO FOODSFRUITS</p>
                        </div>
                    </div>

                    <div class="flex items-start space-x-4">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-6 h-6 text-red-500 mt-1 flex-shrink-0"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path><circle cx="12" cy="10" r="3"></circle></svg
                        >
                        <div>
                            <p class="font-medium">Адрес</p>
                            <p class="text-muted-foreground">{companyInfo.contact.address}</p>
                        </div>
                    </div>

                    <div class="flex items-start space-x-4">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-6 h-6 text-green-500 mt-1"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path
                                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                            ></path></svg
                        >
                        <div>
                            <p class="font-medium">Телефон</p>
                            <p class="text-muted-foreground">{companyInfo.contact.phone}</p>
                        </div>
                    </div>

                    <div class="flex items-start space-x-4">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-6 h-6 text-blue-500 mt-1"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
                        >
                        <div>
                            <p class="font-medium">Email</p>
                            <p class="text-muted-foreground">{companyInfo.contact.email}</p>
                        </div>
                    </div>
                </div>

                <div>
                    <h4 class="text-lg font-medium mb-4">Часы работы</h4>
                    <div class="space-y-2 text-sm">
                        <div class="flex justify-between">
                            <span>Понедельник - Пятница:</span>
                            <span>9:00 - 18:00</span>
                        </div>
                        <div class="flex justify-between">
                            <span>Суббота:</span>
                            <span>10:00 - 16:00</span>
                        </div>
                        <div class="flex justify-between">
                            <span>Воскресенье:</span>
                            <span>Выходной</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Map -->
            <div class="rounded-xl overflow-hidden shadow-lg h-full min-h-[400px]">
                <iframe
                    src="https://yandex.com/map-widget/v1/?um=constructor%3A5ae1e7ef2e099beab857784842b3021a93263f958b6ca09ae9c5255137235493&source=constructor"
                    width="100%"
                    height="100%"
                    frameborder="0"></iframe>
            </div>
        </div>
    </div>
</section>

<style>
    .text-muted-foreground {
        color: hsl(240 3.8% 46.1%);
    }

    /* Glass effect */
    .bg-white\/80 {
        background-color: rgba(255, 255, 255, 0.8);
    }

    /* Shadow effects */
    .shadow-lg {
        box-shadow:
            0 10px 15px -3px rgba(0, 0, 0, 0.1),
            0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }
</style>
