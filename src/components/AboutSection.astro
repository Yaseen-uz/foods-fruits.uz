---
import { CheckCircle } from "lucide-react";
import Image from "astro/components/Image.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const companyInfo = {
    name: "FoodsFruits",
    foundedYear: 2014,
    description: t("Премиальный дистрибьютор фруктов с обязательством обеспечивать качество и устойчивое развитие"),
    mission: t("Доставлять самые свежие, высококачественные фрукты нашим клиентам, поддерживая устойчивые методы фермерства"),
    values: [
        t("Качество - мы отбираем только лучшие фрукты"),
        t("Устойчивое развитие - мы заботимся о природе"),
        t("Прозрачность - честные отношения с партнерами и клиентами"),
        t("Удовлетворенность клиентов - ваше довольство наш приоритет"),
    ],
    garantText: t(
        "Компания уделяет особое внимание качеству продукции, сотрудничая с надёжными поставщиками и строго контролируя процессы хранения и транспортировки, следует строгим стандартам безопасности пищевых продуктов и уделяет внимание санитарным нормам, которые помогают сохранять в целостности и сохранности ваши овощи и фрукты."
    ),
    garantTitle: t("Гарантия качества"),
};
---

<section id="about" class="relative py-20 md:h-full overflow-hidden">
    <div class="absolute inset-0">
        <div class="absolute inset-0 z-10 !bg-black/80"></div>
        <div
            class="absolute inset-0"
            style={{
                backgroundImage: `url('./bg-cover.webp')`,
                backgroundSize: "cover",
                backgroundPosition: "center",
            }}
        >
        </div>
    </div>

    <div class="container mx-auto relative z-10 text-white backdrop-blur-2xl p-10 rounded-xl">
        <div class="max-w-3xl mx-auto text-center mb-16">
            <span class="inline-block px-3 py-1 mb-4 rounded-full text-sm font-medium bg-gray-100/50 text-primary">
                {t("С {year} года").replaceAll("{year}", companyInfo.foundedYear)}
            </span>
            <h2 class="section-title">{t("О компании")} {companyInfo.name}</h2>
            <p class="text-lg text-muted-foreground">
                {companyInfo.description}
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
            <div class="relative rounded-2xl overflow-hidden aspect-square md:aspect-auto md:h-[500px]">
                <Image src="/ss.webp" height={500} width={500} alt="Сбор фруктов" class="object-cover w-full h-full" />
            </div>

            <div class="space-y-8">
                <div>
                    <h3 class="text-2xl font-medium mb-3">{t("Наша миссия")}</h3>
                    <p class="text-muted-foreground">
                        {companyInfo.mission}
                    </p>
                </div>

                <div>
                    <h3 class="text-2xl font-medium mb-3">{t("Наши принципы")}</h3>
                    <ul class="grid grid-cols-1 gap-3">
                        {
                            companyInfo.values.map((value, index) => (
                                <li class="flex items-center space-x-3">
                                    <CheckCircle className="h-5 w-5 text-fruit-green flex-shrink-0" />
                                    <span>{value}</span>
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <div class="bg-gray-100/10 p-6 rounded-xl">
                    <h3 class="text-xl font-medium mb-3">{companyInfo.garantTitle}</h3>
                    <p class="text-sm text-muted-foreground">
                        {companyInfo.garantText}
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
